<style>
table,td,tr,th {
border: 1px Solid black;
padding:10px;
}
a{
font-weight: bold;
color:green;
}
h1{
text-align:center;
font-weight: bold;
}
</style>
    <h1>User</h1>
    <br><br><br><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
        </tbody>
    </table>

   

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit | </a> 
    <a href="{{ include('user/_delete_form.html.twig') }}">
{% endblock %}
