{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>
<div> <a href="{{path('app_rendez_vous_index')}}"> ajouter un rendez vous  </a> </div>
    <table class="table">
        <thead><div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
             
            
            </tr>
        </thead>
        <tbody>
        {% for patient in user %}
        {% if 'ROLE_PATIENT' in patient.roles %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.email }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
            
                <td>
                   <a href="{{ path('app_user_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
      
           
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div></div>
    <a href="{{ path('app_register_patient') }}">Create new Patient</a>
{% endblock %}
